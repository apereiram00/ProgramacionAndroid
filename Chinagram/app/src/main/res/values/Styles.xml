<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para AlertDialog -->
    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/text_color</item> <!-- Color del mensaje -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item> <!-- Botón positivo -->
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item> <!-- Botón negativo -->
    </style>

    <!-- Estilo para los botones del AlertDialog -->
    <style name="AlertButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/text_color</item> <!-- Negro en claro, blanco en oscuro -->
    </style>
</resources>
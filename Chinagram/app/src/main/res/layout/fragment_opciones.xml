<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Modo Oscuro/Claro -->
    <LinearLayout
        android:id="@+id/modoOscuroClaro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modo Claro/Oscuro"
            android:textSize="16sp"
            android:textColor="@color/text_color"/>
        <Switch
            android:id="@+id/switchModo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />
    </LinearLayout>

    <Button
        android:id="@+id/cerrarSesionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar SesiÃ³n"
        android:layout_marginTop="8dp"
        app:backgroundTint="@color/button_background"
        android:textColor="@color/button_text_color" />

    <Button
        android:id="@+id/eliminarCuentaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Cuenta"
        android:layout_marginTop="8dp"
        app:backgroundTint="@color/button_background"
        android:textColor="@color/button_text_color"/>

    <Button
        android:id="@+id/soporteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obtener Ayuda"
        android:layout_marginTop="8dp"
        app:backgroundTint="@color/button_background"
        android:textColor="@color/button_text_color"/>

</LinearLayout>